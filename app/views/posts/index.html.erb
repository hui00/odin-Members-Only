<div>
  <div class="flex my-4 ">
    <h1 class="font-bold text-4xl grow">Posts#index</h1>
    <%= link_to "New Post", new_post_path, class: "px-6 py-2 font-medium tracking-wide text-white capitalize transition-colors duration-300 transform bg-black rounded-md hover:bg-stone-500 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-80" %>
  </div>

    <% @posts.reverse.each do |post| %>
      <p class="text-2xl"><%= post.title %></p>
      <p class="mb-12"><%= post.body %></p>
    <% end %>

</div>
